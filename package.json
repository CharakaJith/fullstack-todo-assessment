{
  "name": "fullstack-todo-assessment",
  "version": "1.0.0",
  "description": "A full-stack Dockerized to-do app with REST API, PostgreSQL, and a React SPA frontend.",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:down": "npx sequelize-cli db:migrate:undo",
    "migrate:down:all": "npx sequelize-cli db:migrate:undo:all",
    "test:unit": "jest --config jest.config.js"
  },
  "author": "Charaka Jith Gunasinghe",
  "license": "ISC",
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "sequelize": "^6.37.7",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
